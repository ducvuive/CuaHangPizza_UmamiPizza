                            <a class="nav-link text-dark" href="/admin/danhmucsanpham">Admin</a>
                        </li>
                    }
                <li class="nav-item cta cta-colored"><a asp-controller="SanPham" asp-action="Cart" class="nav-link"><span class="icon-shopping_cart"></span></a></li>

                </ul>
