@model DoAn_CuaHangLaptop.Models.CongKetNoi

@{
    ViewData["Title"] = "Details";
    var congketnoi = ViewData["CongKetNoi"] as CongKetNoi;
    Layout = "/Views/Shared/_Layout2.cshtml";
}

<h1>Details</h1>

<div class="card-body">

    <h1 style="text-align: center; color: coral;">Thông tin cổng kết nối</h1>
    <hr />
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                Cổng giao tiếp:
            </dt>
            <dd class="col-sm-10">

                @congketnoi.CongGiaoTiep
            </dd>
            <dt class="col-sm-2">
                Kết nối không dây:
            </dt>
            <dd class="col-sm-10">
                @congketnoi.KetNoiKhongDay
            <dt class="col-sm-2">
                Khe đọc thẻ nhớ:
            </dt>
            <dd class="col-sm-10">
                @congketnoi.KheDocTheNho
            </dd>
            <dt class="col-sm-2">
                Webcam:
            </dt>
            <dd class="col-sm-10">
                @congketnoi.WebCam
            </dd>
            <dt class="col-sm-2">
                Tính năng khác:
            </dt>
            <dd class="col-sm-10">
                @congketnoi.TinhNangKhac
            </dd>
            <dt class="col-sm-2">
                Đèn bàn phím:
            </dt>
            <dd class="col-sm-10">
                @congketnoi.DenBanPhim
            </dd>
        </dl>
    </div>
    <br />
    <div>
        @Html.ActionLink("Cập nhật", "Edit", new { id = @congketnoi.MaCKN }) |
        <a asp-action="Index">Trở về</a>
    </div>
</div>
