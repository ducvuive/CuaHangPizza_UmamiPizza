@model PhatTrienWeb_Laptop.Models.HoaDon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{

   
    <script>
        
        $(document).ready(function () {
            var today = new Date();
            var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
            $('#date').val(date);
        })
    </script>
}
<div class="container">
    <div class="m-5">
        <h4 align="center"> Tạo hóa đơn</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKH" class="control-label"></label>
                <select asp-for="MaKH" class="form-control">
                    @foreach (KhachHang kh in (List<KhachHang>)ViewBag.dsKH)
                    {
                        <option value="@kh.MaKH">@kh.TenKH</option>
                    }
                </select>
                <span asp-validation-for="MaKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNV" class="control-label"></label>
                <select asp-for="MaNV" class="form-control">
                    @foreach (NhanVien nv in (List<NhanVien>)ViewBag.dsNV)
                    {
                        <option value="@nv.MaNV">@nv.TenNV</option>
                    }
                </select>
                <span asp-validation-for="MaNV" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="MaSK" class="control-label"></label>
                    <select asp-for="MaSK" class="form-control" name="chosen-select" data-placeholder="Lựa chọn tên sự kiện...">
                        @foreach (SuKien sk in (List<SuKien>)ViewBag.dsSK)
                        {
                            <option value="@sk.MaSK">@sk.TenSK</option>
                        }
                    </select>
                    <span asp-validation-for="MaSK" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="MaSK" class="control-label"></label>
                <select asp-for="MaSK" class="form-control">
                    @foreach (SuKien sk in (List<SuKien>)ViewBag.dsSK)
                    {
                        <option value="@sk.MaSK">@sk.TenSK</option>
                    }
                </select>
                <span asp-validation-for="MaSK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NgayHD" class="control-label"></label>
                <input asp-for="NgayHD" class="form-control" type="date" id="date" disabled />
                <span asp-validation-for="NgayHD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChiGiaoHang" class="control-label"></label>
                <input asp-for="DiaChiGiaoHang" class="form-control" />
                <span asp-validation-for="DiaChiGiaoHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Xác nhận" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Trở về trang danh sách</a>
        </div>
    </div>
</div>
