@model DoAn_CuaHangLaptop.Models.BoNhoRAM

@{
    ViewData["Title"] = "Details";
    var bonhoram = ViewData["BoNhoRam"] as BoNhoRAM;
    Layout = "/Views/Shared/_Layout2.cshtml";
}

<h1>Details</h1>



<div class="card-body">

    <h1 style="text-align: center; color: coral;">Thông tin RAM</h1>
    <hr />
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                Dung lượng RAM:
            </dt>
            <dd class="col-sm-10">

                @bonhoram.DungLuongRAM
            </dd>
            <dt class="col-sm-2">
                Loại RAM:
            </dt>
            <dd class="col-sm-10">
                @bonhoram.LoaiRAM
            </dd>
            <dt class="col-sm-2">
                Bus RAM:
            </dt>
            <dd class="col-sm-10">
                @bonhoram.BusRAM
            </dd>
            <dt class="col-sm-2">
                Hỗ trợ tối đa:
            </dt>
            <dd class="col-sm-10">
                @bonhoram.HoTroToiDa
            </dd>
        </dl>
    </div>
    <br />
    <div>
        @Html.ActionLink("Cập nhật", "Edit", new { id = @bonhoram.MaRAM }) |
        <a asp-action="Index">Trở về</a>
    </div>
</div>