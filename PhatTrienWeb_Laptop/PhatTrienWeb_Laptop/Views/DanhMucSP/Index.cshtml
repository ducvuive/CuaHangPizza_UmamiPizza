@model IEnumerable<DoAn_CuaHangLaptop.Models.DanhMuc>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout1.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDM)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.MaDM }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaDM }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaDM }, new { onclick = "return confirm('Bạn chắc chắn muốn xóa danh mục này?');" })
            </td>
        </tr>
}
    </tbody>
</table>
