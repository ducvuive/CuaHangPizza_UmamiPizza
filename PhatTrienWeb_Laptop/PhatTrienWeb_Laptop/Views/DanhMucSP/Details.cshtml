@model DoAn_CuaHangLaptop.Models.DanhMuc

@{
    ViewData["Title"] = "Details";
    var danhmucsp = ViewData["DanhMuc"] as DanhMuc;
    Layout = "/Views/Shared/_Layout2.cshtml";

}

<h1>Details</h1>

<div class="card-body">

    <h1 style="text-align: center; color: coral;">Thông tin danh mục sản phẩm</h1>
    <hr />
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                Tên danh mục:
            </dt>
            <dd class="col-sm-10">

                @danhmucsp.TenDM
            </dd>
           
        </dl>
    </div>
    <br />
    <div>
        @Html.ActionLink("Cập nhật", "Edit", new { id = @danhmucsp.MaDM }) |
        <a asp-action="Index">Trở về</a>
    </div>
</div>
