@model PhatTrienWeb_Laptop.Models.CTHD

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-5">
        <h4 align="center">Cập nhật chi tiết hóa đơn</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="MaHD" class="form-control" type="hidden" />
            </div>
            <input type="hidden" asp-for="MaSP" />
            <div class="row">
                <span class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MaSP)
                </span>
                <span class="col-sm-10">
                    @TempData["tensp"]
                </span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input max="@TempData["soluong"]" asp-for="SoLuong" class="form-control" min="0" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a href="@Url.Action("Index", "HoaDon")">Trở về trang danh sách</a>
        </div>

    </div>
</div>
